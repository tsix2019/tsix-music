@font-face {
  font-family: "iconfont";
  /* Project id 3126827 */
  src: url('//at.alicdn.com/t/font_3126827_jsyt61ouuxj.woff2?t=1642580264203') format('woff2'), url('//at.alicdn.com/t/font_3126827_jsyt61ouuxj.woff?t=1642580264203') format('woff'), url('//at.alicdn.com/t/font_3126827_jsyt61ouuxj.ttf?t=1642580264203') format('truetype');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-icon:before {
  content: "\e651";
}
.song-review {
  position: absolute;
  top: 180rpx;
  background-color: #fff;
}
.song-review .comments {
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
}
.song-review .comments .comments-item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.song-review .comments .comments-item .detail {
  width: 80%;
  margin-top: 10rpx;
  border-bottom: 1px solid #ccc;
}
.song-review .comments .comments-item .detail .user-name {
  font-size: 30rpx;
  color: #666;
  font-weight: 600;
}
.song-review .comments .comments-item .detail .time {
  font-size: 24rpx;
  color: #999;
}
.song-review .comments .comments-item .detail .count {
  color: #efefef;
  opacity: 0.9;
  border-radius: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  top: 5px;
  right: 20rpx;
  background-color: #ccc;
  padding: 0 10rpx;
}
.song-review .comments .comments-item .detail .count .iconfont {
  font-size: 26rpx;
  margin-right: 6rpx;
}
.song-review .comments .comments-item .detail .count .num {
  display: inline-block;
  font-size: 24rpx;
}
.song-review .comments .comments-item .detail .count:hover {
  color: #dc001a;
}
.song-review .comments .comments-item .detail .content {
  margin-top: 10rpx;
}
.song-review .comments .comments-item image {
  width: 90rpx;
  height: 90rpx;
  margin: 0 20rpx;
  border-radius: 45px;
}
